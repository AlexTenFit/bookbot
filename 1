from stats import word_count, char_count

def get_book_text(path):
    with open(path) as f:
        return f.read()

def main():
    text = get_book_text("books/frankenstein.txt")
    wc = word_count(text)
    print(f"{wc} words found in the document")
    cc = char_count(text)
    for item in cc:
        print(f"'{item.key}': {item.value}")


main()
